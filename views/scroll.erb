<html>
	<head>
		<meta charset="UTF-8"/>
		<title>Smartprompt</title>
		<link rel="stylesheet" href="/css/reset.css" />
		<link rel="stylesheet" href="/css/index.css" />
		<link rel="stylesheet" href="/css/scroll.css" />
		<link href='http://fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' />
		<link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' />
	</head>

	<body>
		<div class="header">
			<div class="wrapper">
				<h1><a href="/">Smartprompt</a></h1>
				<p>Best Prompter Online!</p>
				<span class="id">#<%= @post.id %></span>
			</div>
		</div>

		<div class="content">
			<div class="wrapper">
				<div class="scroll-area">
					<h1><%= @post.title %></h1>
					<p>
						<% for word in @processed_words %>
							<span style=<%= word.getwordsize %>>
							<%= word.word %>
							</span>
						<% end %>
					</p>
				</div>
			</div>
		</div>
	</body>
</html>
